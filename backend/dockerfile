FROM python:3.12-slim

# Corrected ENV syntax to remove warnings
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PORT=8000

WORKDIR /app

RUN apt-get update && apt-get install -y \
    libpq-dev \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /app/
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r ./requirements.txt

# Copy application code
COPY . /app/

# ðŸŸ¢ NEW: Set ownership to the django-user
RUN adduser --disabled-password --gecos "" django-user && \
    chown -R django-user:django-user /app/

# Collect static files (needs to happen while django-user has permission)
RUN python manage.py collectstatic --noinput

# Switch to the non-root user
USER django-user

EXPOSE 8000

# Railway-optimized start command
CMD python manage.py migrate && gunicorn lokmitra_backend.wsgi:application --bind 0.0.0.0:$PORT